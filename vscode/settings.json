{
  "workbench.colorTheme": "Material Theme Palenight High Contrast",
  "window.zoomLevel": 0,
  // always Indent by 2 spaces except python, C/C++
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "all",
  "[python]": {
    "editor.tabSize": 4
  },
  "[c]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.formatOnSave": false
  },
  "[cpp]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.formatOnSave": false
  },
  "[makefile]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.formatOnSave": false
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // auto-save configs
  "editor.formatOnSave": true,
  // disasable prettier for JS
  "prettier.disableLanguages": ["js"],
  // eslint + prettier config
  "eslint.alwaysShowStatus": true,
  "eslint.autoFixOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.tslint": true,
    "source.fixAll.eslint": true
  },
  "prettier.singleQuote": true,
  "liveshare.featureSet": "insiders",
  // path of shfmt binairie
  "shellformat.path": "/snap/bin/shfmt",
  // path of node binairie
  "code-runner.executorMap": {
    "javascript": "/home/nikki/.nvm/versions/node/v13.3.0/bin/node"
  },
  "python.jediEnabled": false,
  "terminal.integrated.rendererType": "dom",
  "vsicons.dontShowNewVersionMessage": true,
  "workbench.iconTheme": "vscode-icons",
  "explorer.confirmDragAndDrop": false,
  "C_Cpp.updateChannel": "Insiders",
  "code-runner.runInTerminal": true,
  "python.languageServer": "Microsoft",
  "42header.username": "nvasilev",
  "42header.email": "nvasilev@student.42.fr"
}
